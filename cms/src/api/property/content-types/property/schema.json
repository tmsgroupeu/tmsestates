{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "Property"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "city": {
      "type": "string",
      "required": true
    },
    "bedrooms": {
      "type": "integer"
    },
    "bathrooms": {
      "type": "integer"
    },
    "area": {
      "type": "decimal"
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "vip": {
      "type": "boolean",
      "default": false
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "EUR",
        "USD",
        "GBP"
      ]
    },
    "prop_status": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "for-sale",
        "for-rent",
        "sold",
        "rented"
      ]
    },
    "propertyType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "House",
        "Apartment",
        "Villa",
        "Commercial/Offices",
        "Plot/Land"
      ]
    }
  }
}
